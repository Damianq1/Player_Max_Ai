<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Główny theme Ultimate Player -->
    <style name="Theme.UltimatePlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFF00</item>
        <item name="colorPrimaryVariant">#CCCC00</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFFF00</item>
        <item name="colorSecondaryVariant">#CCCC00</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowBackground">#FF000000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- NoActionBar dla aktywności -->
    <style name="Theme.UltimatePlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- TV Focus Style (#32 Focus Indicator) -->
    <style name="ChannelButton" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFF00</item>
        <item name="backgroundTint">#FF333333</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>
